{
  "name": "haskell-lsp-extension",
  "displayName": "Haskell LSP Extension",
  "description": "Language Server Protocol extension for Haskell development with code completion, hover information, and diagnostics",
  "version": "0.1.0",
  "publisher": "haskell-lsp",
  "author": {
    "name": "Haskell LSP Team"
  },
  "license": "MIT",
  "homepage": "https://github.com/haskell-lsp/haskell-lsp-extension",
  "repository": {
    "type": "git",
    "url": "https://github.com/haskell-lsp/haskell-lsp-extension.git"
  },
  "bugs": {
    "url": "https://github.com/haskell-lsp/haskell-lsp-extension/issues"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "haskell",
    "language-server",
    "lsp"
  ],
  "activationEvents": [
    "onLanguage:haskell"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "haskell",
        "aliases": ["Haskell", "haskell"],
        "extensions": [".hs", ".lhs"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Haskell LSP",
      "properties": {
        "haskellLsp.serverPath": {
          "type": "string",
          "default": "haskell-lsp-server",
          "description": "Path to the Haskell LSP server executable"
        },
        "haskellLsp.logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warning", "error"],
          "default": "info",
          "description": "Log level for the LSP server"
        },
        "haskellLsp.maxRestartCount": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of times to restart the server on crash"
        },
        "haskellLsp.enableVerboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging output"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "build": "./build.sh",
    "clean": "rm -rf out/ *.vsix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^2.19.0"
  },
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  }
}